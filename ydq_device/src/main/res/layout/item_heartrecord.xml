        <ImageView
            android:id="@+id/heartrecord_line"
            android:layout_margin="20px"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_below="@id/heartrecord_iv"
            android:src="@color/color_line1"/>

        <TextView
            android:id="@+id/heartrecord_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:text="2016-09-28 16:00:00"
            android:textSize="36px"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/heartrecord_line"
            android:textColor="@color/ysjj_big_text1"/>


    </RelativeLayout>

</LinearLayout></layout>