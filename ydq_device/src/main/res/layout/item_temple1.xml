<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/item_temple1_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:clickable="true"
        android:background="@color/line_color8"
        android:gravity="center_vertical"
        android:text="未开启蓝牙（目前是手动输入模式）"
        android:paddingLeft="20px"
        android:textColor="@color/line_color9"/>
    <ImageView
        android:id="@+id/temple1_warning"
        android:layout_marginTop="140px"
        android:visibility="invisible"
        android:layout_width="60px"
        android:layout_height="60px"

        android:layout_centerHorizontal="true"
        android:src="@drawable/warning_ico"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="680px">
        <com.conagra.hardware.widget.TempleView
            android:id="@+id/item_temple1_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/item_temple1_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正常"
            android:textColor="@color/mine_text1"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15px"
            android:textSize="44px"/>


            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/item_temple1_wd"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35.0"
                    android:textSize="120px"
                    android:textColor="@color/colorMain"/>

                <TextView
                    android:layout_below="@id/item_temple1_wd"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="℃"
                    android:textSize="40px"
                    android:textColor="@color/black"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="130px"
        android:layout_width="match_parent"
        android:layout_height="180px">
        <com.conagra.hardware.widget.RulerView2
            android:id="@+id/item_temple1_ruler"
            android:layout_width="match_parent"
            android:layout_height="180px" />
        <LinearLayout
            android:id="@+id/item_bloodpressure1_alpha"
            android:layout_below="@id/item_bloodpressure1_tv_ll"
            android:layout_alignTop="@id/item_bp1_rv_top"
            android:layout_alignBottom="@id/item_bp1_rv_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.9"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.8"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.7"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.6"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.4"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.3"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.1"
                    android:background="@color/bg_color1"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.0"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.0"
                    android:background="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.0"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.0"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.1"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.3"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.4"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.6"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.7"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.8"
                    android:background="@color/white"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.9"
                    android:background="@color/white"/>
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_marginTop="10px"
            android:layout_centerHorizontal="true"
            android:layout_width="20px"
            android:layout_height="126px"
            android:background="@drawable/bloodsugar_bcjt"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:clickable="true"
            android:id="@+id/quickening1_bt_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:drawableTop="@drawable/quickening_uparrowg"
            android:text="向上滑动查看曲线图"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="32px"
            android:layout_marginTop="20px"
            android:textColor="@color/quickening_text1"/>
        <Button
            android:id="@+id/item_temple1_bt"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_above="@id/quickening1_bt_up"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:text="保存"
            android:textColor="@color/white"
            android:background="@drawable/bg_selector3"/>

    </RelativeLayout>



</LinearLayout>
</layout>