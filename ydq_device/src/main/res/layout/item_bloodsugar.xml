<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bloodsugarItem_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/line_color8"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="20px"
            android:text="未开启蓝牙（目前是手动输入模式）"
            android:textColor="@color/line_color9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="60px"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bloodsugarItem_ll_zc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bloodsugarItem_tv_zc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早餐"
                    android:textColor="@color/colorMain"
                    android:textSize="45px" />

                <View
                    android:id="@+id/bloodsugarItem_v_zc"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginTop="45px"
                    android:background="@color/colorMain" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bloodsugarItem_ll_wc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bloodsugarItem_tv_wc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="午餐"
                    android:textColor="@color/color_text1"
                    android:textSize="45px" />

                <View
                    android:id="@+id/bloodsugarItem_v_wc"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginTop="45px"
                    android:background="@color/colorMain"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bloodsugarItem_ll_wsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bloodsugarItem_tv_wsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晚餐"
                    android:textColor="@color/color_text1"
                    android:textSize="45px" />

                <View
                    android:id="@+id/bloodsugarItem_v_wsc"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginTop="45px"
                    android:background="@color/colorMain"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bloodsugarItem_ll_sq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bloodsugarItem_tv_sq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="睡前"
                    android:textColor="@color/color_text1"
                    android:textSize="45px" />

                <View
                    android:id="@+id/bloodsugarItem_v_sq"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginTop="45px"
                    android:background="@color/colorMain"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="600px">

            <com.conagra.hardware.widget.BloodSugarView
                android:id="@+id/bloodsugarItem_bsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bloodsugarItem_tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="@color/colorMain"
                    android:textSize="100px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50px"
                    android:text="mmol"
                    android:textColor="@color/color_text1"
                    android:textSize="36px" />

            </LinearLayout>

            <TextView
                android:id="@+id/bloodsugarItem_bt_xzs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50px"
                android:clickable="true"
                android:text="血糖小知识"
                android:textColor="@color/colorMain"
                android:textSize="36px" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bloodsugarItem_bt_state_ll"
            android:layout_width="340px"
            android:layout_height="60px"
            android:background="@drawable/rec_green_arc"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bloodsugarItem_bt_cq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rec_green_arc1"
                android:gravity="center"
                android:text="餐前"
                android:textColor="@color/white"
                android:textSize="34px" />

            <TextView
                android:id="@+id/bloodsugarItem_bt_ch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="餐后"
                android:textColor="@color/color_text1"
                android:textSize="34px" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginTop="100px">


            <com.conagra.hardware.widget.RulerView1
                android:id="@+id/bloodsugarItem_bt_ruler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <LinearLayout
                android:id="@+id/item_bloodpressure1_alpha"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.9"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.8"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.6"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.4"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.3"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.2"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.1"
                        android:background="@color/bg_color1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.0"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.0"
                        android:background="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.0"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.0"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.1"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.2"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.3"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.4"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.6"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.8"
                        android:background="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.9"
                        android:background="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="20px"
                android:layout_height="150px"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bloodsugar_bcjt" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bloodsugarItem_bt_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10px"
                android:layout_marginTop="20px"
                android:clickable="true"
                android:drawableTop="@drawable/quickening_uparrowg"
                android:text="向上滑动查看曲线图"
                android:textColor="@color/quickening_text1"
                android:textSize="32px" />

            <Button
                android:id="@+id/bloodsugarItem_bt_save"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_above="@id/bloodsugarItem_bt_up"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:background="@drawable/bg_selector3"
                android:text="保存"
                android:textColor="@color/white" />

        </RelativeLayout>


    </LinearLayout>
</layout>